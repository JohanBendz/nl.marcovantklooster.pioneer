{
    "id": "nl.marcovantklooster.pioneer",
    "name": {
        "en": "Pioneer"
    },
    "version": "0.0.4",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Marco van 't Klooster",
        "email": "info@marcovantklooster.nl"
    },
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "category": "appliances",
    "description": {
    "en": "Pioneer VSX control app for Homey",
    "nl": "Dit is een Pioneer VSX aansturing app voor Homey"
    },
    "dependencies": {
    		"net": "*"
    },
    "drivers": [
      {
          "id": "amplifier",
          "name": {
              "en": "Pioneer amplifier",
              "nl": "Pioneer versterker"
          },
          "images": {
              "large": "drivers/amplifier/assets/images/large.jpg",
              "small": "drivers/amplifier/assets/images/small.jpg"
          },
          "class": "other",
          "capabilities": [ "" ],
          "pair": [
            {
              "id": "start"
            },
            {
              "id": "list_devices",
              "template": "list_devices",
              "navigation": {
                  "next": "add_amplifier"
              }
            },
            {
              "id": "add_amplifier",
              "template": "add_devices"
            }
          ]
      }
    ],
    "flow": {
        "actions": [
        {
            "id": "powerOn",
            "title": {
                "en": "Turn power on",
                "nl": "Zet aan"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "placeholder": {
                  "en": "Select amplifier",
                  "nl": "Selecteer versterker"
                }
              }
            ]
        },
        {
            "id": "powerOff",
            "title": {
                "en": "Power off/standby",
                "nl": "Uitschakelen/standby"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "placeholder": {
                  "en": "Select amplifier",
                  "nl": "Selecteer versterker"
                }
              }
            ]
        },
        {
            "id": "changeInput",
            "title": {
                "en": "Switch input",
                "nl": "Schakel input"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "placeholder": {
                  "en": "Select amplifier",
                  "nl": "Selecteer versterker"
                }
              }
            ]
        },
        {
            "id": "mute",
            "title": {
                "en": "Toggle Mute",
                "nl": "Mute aan/uit"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "placeholder": {
                  "en": "Select amplifier",
                  "nl": "Selecteer versterker"
                }
              }
            ]
        },
        {
            "id": "volumeUp",
            "title": {
                "en": "Volume up",
                "nl": "Volume omhoog"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "placeholder": {
                  "en": "Select amplifier",
                  "nl": "Selecteer versterker"
                }
              }
              {
                "name": "volume",
                "type": "number",
                "min": 0,
                "max": 99,
                "placeholder": {
                   "en": "Steps volume up",
                   "nl": "Stappen volume omhoog"
                }
              }
            ]
        },
        {
            "id": "volumeDown",
            "title": {
                "en": "Volume down",
                "nl": "Volume omlaag"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "placeholder": {
                  "en": "Select amplifier",
                  "nl": "Selecteer versterker"
                }
              }
              {
                "name": "volume",
                "type": "number",
                "min": 0,
                "max": 99,
                "placeholder": {
                   "en": "Steps volume down",
                   "nl": "Stappen volume oplaag"
                }
              }
            ]
        }
      ]
    }
}
